\newenvironment{definition}
	{\vspace{5mm}\begin{rightbar}\textbf{\textit{\color{DarkBlue}{Definición:}}}}
	{\end{rightbar}\vspace{5mm}}
	
\newenvironment{lemma}
	{\vspace{5mm}\begin{rightbar}\textbf{Lema \thesection.\arabic{Lemmas}:}}
	{\end{rightbar}\vspace{5mm}\stepcounter{Lemmas}}
	
\newenvironment{example}[1][]
	{\vspace{5mm}\begin{leftbar}\textbf{Ejemplo\ifthenelse{\equal{#1}{}}{: }{ #1: }}}
	{\end{leftbar}}
	
\newenvironment{method}[1][]
	{\vspace{5mm}\begin{rightbar}\textbf{Método\ifthenelse{\equal{#1}{}}{:}{ #1: \index{Método!#1}}}}
	{\end{rightbar}}

\renewenvironment{proof}
	{\vspace{20pt}\begin{leftbar}\textbf{Demostración: }}
	{\hfill$\blacksquare$ \end{leftbar}\vspace{20pt}}
	
